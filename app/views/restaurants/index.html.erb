<div class="container bg-light">
  <h1>Restaurants</h1>
    <div class="row gap-2 border-bottom">
      <% @restaurants.each do |restaurant| %>
        <div class="card col-4" style="width: 20rem;">
          <div class="card-body">
            <img src="https://source.unsplash.com/random/200x200" class="card-img-top" alt="...">
            <h5 class="card-title"><%= link_to restaurant.name, restaurant_path(restaurant)%></h5>
            <p class="card-text lead"><%= restaurant.category %></p>
          </div>
        </div>
      <% end %>
    </div>
  <%= link_to "Add new restaurant", new_restaurant_path, class: 'btn btn-light mt-3' %>
</div>
